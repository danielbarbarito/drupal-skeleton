{
    "name": "palantirnet/drupal-skeleton",
    "description": "A Drupal 8 project template.",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "Palantir.net",
            "email": "info@palantir.net"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "preferred-install": "dist",
    "repositories": [
        {
            "type": "composer",
            "url": "https://palantirnet.github.io/the-build/packages.json"
        },
        {
            "type": "composer",
            "url": "https://packagist.drupal-composer.org"
        }
    ],
    "require": {
        "composer/installers": "^1.0",
        "drupal-composer/drupal-scaffold": "^1.0",
        "drupal/core": "^8.0",
        "drush/drush": "^8.0",
        "palantirnet/the-build": "dev-master",
        "palantirnet/the-vagrant": "dev-master"
    },
    "require-dev": {
        "behat/mink": "^1.7",
        "behat/mink-goutte-driver": "^1.2"
    },
    "suggest": {
        "cweagans/composer-patches": "Try ^1.0. Apply patches to packages, especially Drupal.org contrib.",
        "drupal/config_installer": "Try ~8.1.2. Drupal install profile to install a site from exported configuration.",
        "drupal/console": "Try ^0.10. Scaffolding and debugging tools for Drupal 8 development."
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "post-root-package-install": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        }
    }    
}
